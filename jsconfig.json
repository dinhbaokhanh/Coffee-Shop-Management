{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "module": "ES6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["components/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
